# .github/workflows/regenerate-lockfile.yml
name: Regenerar package-lock.json

on:
  workflow_dispatch:

jobs:
  regenerate-lockfile:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Configurar Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 18
      - name: Instalar dependencias y generar package-lock.json
        run: |
          npm install --legacy-peer-deps
      - name: Confirmar y subir cambios
        run: |
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"
          git add package-lock.json
          git commit -m "Regenerar package-lock.json sincronizado con package.json"
          git push

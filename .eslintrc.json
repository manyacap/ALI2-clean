{
  "root": true,                     // Le dice a ESLint “aquí empieza mi config”
  "env": {
    "browser": true,
    "es2021": true,
    "worker": true
  },
  "extends": [
    "airbnb-base",                  // Reglas estándar
    "prettier"                      // Desactiva las que chocan con Prettier
  ],
  "plugins": ["import"],
  "rules": {
    "no-magic-numbers": ["error", { "ignore": [0, 1] }],
    "import/no-unresolved": ["error", { "ignore": ["^https://"] }]
  }
}


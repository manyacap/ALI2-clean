{
"compilerOptions": {
"target": "ES2020",
"module": "Node16",
"moduleResolution": "Node16",
"strict": true,
"skipLibCheck": true,
"esModuleInterop": true,
"allowSyntheticDefaultImports": true,
"allowJs": true,
"typeRoots": [
"./src/types",
"./node_modules/@types"
],
"lib": [
"ES2020",
"DOM",
"DOM.Iterable",
"WebWorker"
]
},
"include": [
"src//*",
"src/types//*"
],
"exclude": [
"node_modules",
"dist"
]
}
